<!doctype html>
<html lang="en-GB">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>
            {%- if title -%}
                {{ title | escape }} &ndash; {{ metadata.title | escape }}
            {%- else -%}
                {{ metadata.title | escape }}
            {%- endif -%}
        </title>
        <meta name="description" content="{{ metadata.description | escape }}">

        <link href="{{ '/css/app.css' | url }}" rel="stylesheet">
        <script src="{{ '/js/app.js' | url }}" defer></script>
    </head>
    <body class="font-sans antialiased min-h-screen flex flex-col bg-gray-100 text-gray-700">
        {{- content -}}
    </body>
</html>