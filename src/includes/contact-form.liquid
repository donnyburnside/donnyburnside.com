<contact-form class="mt-10 md:mt-20">
    <form class="grid gap-10" novalidate>
        <div class="">
            <label class="inline-block mb-5 font-medium cursor-pointer" for="contact-form-name">
                Name
            </label>
            <input class="block w-full p-5 border outline-none focus:placeholder-transparent" id="contact-form-name" name="name" type="text" placeholder="Your name" required />
            <p class="mt-5" id="contact-form-name-error" hidden></p>
        </div>
        <div class="">
            <label class="inline-block mb-5 font-medium cursor-pointer" for="contact-form-email">
                Email
            </label>
            <input class="block w-full p-5 border outline-none focus:placeholder-transparent" id="contact-form-email" name="email" type="email" placeholder="Email address" required />
            <p class="mt-5" id="contact-form-email-error" hidden></p>
        </div>
        <div class="">
            <label class="inline-block mb-5 font-medium cursor-pointer" for="contact-form-phone">
                Phone
            </label>
            <input class="block w-full p-5 border outline-none focus:placeholder-transparent" id="contact-form-phone" name="phone" type="tel" placeholder="Phone number" required />
            <p class="mt-5" id="contact-form-phone-error" hidden></p>
        </div>
        <div class="">
            <label class="inline-block mb-5 font-medium cursor-pointer" for="contact-form-message">
                Message
            </label>
            <textarea class="block w-full p-5 border outline-none focus:placeholder-transparent" id="contact-form-message" name="message" rows="5" placeholder="Your message" required></textarea>
            <p class="mt-5" id="contact-form-message-error" hidden></p>
        </div>
        <div class="flex flex-row flex-wrap items-center">
            <div class="flex flex-row flex-wrap items-center">
                <button class="" type="submit">
                    Submit
                </button>
                <button class="" type="reset">
                    Reset
                </button>
            </div>
            <div class="ml-auto">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
            </div>
        </div>
    </form>
</contact-form>