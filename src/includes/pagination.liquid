{%- if pagination.page.previous or pagination.page.next -%}
    <nav class="flex flex-row flex-nowrap items-center">
        <div class="w-1/4">
            {%- if pagination.page.previous -%}
                <a class="" href="{{ pagination.href.previous }}">
                    Previous
                </a>
            {%- else -%}
                <span class="opacity-50 cursor-default pointer-events-none">
                    Previous
                </span>
            {%- endif -%}
        </div>
        <div class="w-1/2 text-center">
            {{ pagination.pageNumber | plus: 1 }} / {{ pagination.pages.size }}
        </div>
        <div class="w-1/4 flex justify-end">
            {%- if pagination.page.next -%}
                <a class="" href="{{ pagination.href.next }}">
                    Next
                </a>
            {%- else -%}
                <span class="opacity-50 cursor-default pointer-events-none">
                    Next
                </span>
            {%- endif -%}
        </div>
    </nav>
{%- endif -%}